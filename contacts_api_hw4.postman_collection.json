  "item": [
    {
      "name": "Get all contacts (pagination + sorting)",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/contacts?page=1&perPage=5&sortBy=name&sortOrder=asc",
          "host": ["{{baseUrl}}"],
          "path": ["contacts"],
          "query": [
            { "key": "page", "value": "1" },
            { "key": "perPage", "value": "5" },
            { "key": "sortBy", "value": "name" },
            { "key": "sortOrder", "value": "asc" }
          ]
        }
      }
    },
    {
      "name": "Get contact by ID",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/contacts/{{contactId_1}}",
          "host": ["{{baseUrl}}"],
          "path": ["contacts", "{{contactId_1}}"]
        }
      }
    },
    {
      "name": "Create new contact (valid)",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"John Doe\",\n  \"phoneNumber\": \"+380991112233\",\n  \"email\": \"john@example.com\",\n  \"isFavourite\": true,\n  \"contactType\": \"work\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/contacts",
          "host": ["{{baseUrl}}"],
          "path": ["contacts"]
        }
      }
    },
