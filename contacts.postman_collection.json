          }
        }
      ]
    },
    {
      "name": "Contacts",
      "item": [
        {
          "name": "Get Contacts",
          "request": {
            "method": "GET",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "url": {
              "raw": "https://contacts-fl84.onrender.com/contacts",
              "protocol": "https",
              "host": ["contacts-fl84", "onrender", "com"],
              "path": ["contacts"]
            }
          }
        },
        {
          "name": "Create Contact",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Ivan Petrenko\",\n  \"phoneNumber\": \"+380671234567\",\n  \"email\": \"ivan@example.com\",\n  \"isFavourite\": true,\n  \"contactType\": \"work\"\n}"
            },
            "url": {
              "raw": "https://contacts-fl84.onrender.com/contacts",
              "protocol": "https",
              "host": ["contacts-fl84", "onrender", "com"],
              "path": ["contacts"]
            }
          }
        },
        {
          "name": "Get Contact by ID",
          "request": {
            "method": "GET",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "url": {
              "raw": "https://contacts-fl84.onrender.com/contacts/{{contactId}}",
              "protocol": "https",
              "host": ["contacts-fl84", "onrender", "com"],
              "path": ["contacts", "{{contactId}}"]
            }
          }
        },
        {
          "name": "Update Contact",
          "request": {
            "method": "PATCH",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"isFavourite\": false\n}"
            },
            "url": {
              "raw": "https://contacts-fl84.onrender.com/contacts/{{contactId}}",
              "protocol": "https",
              "host": ["contacts-fl84", "onrender", "com"],
              "path": ["contacts", "{{contactId}}"]
            }
          }
        },
        {
          "name": "Delete Contact",
          "request": {
            "method": "DELETE",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "url": {
              "raw": "https://contacts-fl84.onrender.com/contacts/{{contactId}}",
              "protocol": "https",
              "host": ["contacts-fl84", "onrender", "com"],
              "path": ["contacts", "{{contactId}}"]
            }
          }
        }
      ]
    }
